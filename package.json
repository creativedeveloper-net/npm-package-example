{
  "name": "npm-package-example",
  "version": "0.0.0-development",
  "description": "This is a simple npm package example",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test": "istanbul cover -x *.test.js ./node_modules/mocha/bin/_mocha -- -R spec src/index.test.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/creativedeveloper-net/npm-package-example.git"
  },
  "keywords": [
    "npm",
    "package"
  ],
  "author": "'Tomasz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/creativedeveloper-net/npm-package-example/issues"
  },
  "homepage": "https://github.com/creativedeveloper-net/npm-package-example#readme",
  "devDependencies": {
    "chai": "3.5.0",
    "codecov.io": "0.1.6",
    "commitizen": "2.9.5",
    "cz-conventional-changelog": "1.2.0",
    "ghooks": "2.0.0",
    "istanbul": "0.4.5",
    "mocha": "3.2.0",
    "semantic-release": "^6.3.2"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test && npm run check-coverage"
    }
  }
}
